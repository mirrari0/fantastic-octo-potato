<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            tools:layout_editor_absoluteY="146dp" android:id="@+id/inputField" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Input Number: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="157dp"
            android:id="@+id/fizzbuzzLabel" app:layout_constraintEnd_toStartOf="@+id/inputField"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:autoText="false"/>
    <Button
            android:text="Play!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="269dp"
            tools:layout_editor_absoluteX="161dp" android:id="@+id/play"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="176dp" android:id="@+id/output" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/play" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>